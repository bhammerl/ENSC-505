//Define start and end years
var startYear= 2007;
var endYear = 2020;

//Define study area
var aoi = studyArea;

//Center map
Map.centerObject(aoi, 10);

// // Define a point feature collection to run LandTrendr on.
var points = ee.FeatureCollection([
  ee.Feature(geometry, {'id': 0})
]);

